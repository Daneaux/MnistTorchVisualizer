<Window x:Class="TorchSharpNetworkReference.Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MNIST Network Visualizer" Height="580" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="BarLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="20"/>
        </Style>
        <Style x:Key="BarPct" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Width" Value="48"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        <Style x:Key="ConfigLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
        </Style>
        <Style x:Key="ConfigTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status bar -->
        <TextBlock x:Name="StatusText" Grid.Row="0" FontSize="14" Margin="0,0,0,8"
                   Foreground="#555" Text="Configure parameters below and click 'Train' to begin."/>

        <!-- Configuration panel -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" Background="#F9F9F9" 
                CornerRadius="4" Padding="12,8" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Architecture -->
                <StackPanel Grid.Column="0" Margin="0,0,12,0">
                    <TextBlock Text="Architecture (hidden layers)" Style="{StaticResource ConfigLabel}"/>
                    <TextBox x:Name="ArchitectureTextBox" Style="{StaticResource ConfigTextBox}" 
                             Text="128,64" ToolTip="Enter layer sizes separated by commas (e.g., '128,64' or '256, 128, 64')"/>
                </StackPanel>

                <!-- Epochs -->
                <StackPanel Grid.Column="1" Margin="0,0,12,0">
                    <TextBlock Text="Epochs" Style="{StaticResource ConfigLabel}"/>
                    <TextBox x:Name="EpochsTextBox" Style="{StaticResource ConfigTextBox}" 
                             Text="10" Width="50" ToolTip="Number of training epochs (1-500)"/>
                </StackPanel>

                <!-- Batch Size -->
                <StackPanel Grid.Column="2" Margin="0,0,12,0">
                    <TextBlock Text="Batch Size" Style="{StaticResource ConfigLabel}"/>
                    <TextBox x:Name="BatchSizeTextBox" Style="{StaticResource ConfigTextBox}" 
                             Text="64" Width="60" ToolTip="Training batch size (1-512)"/>
                </StackPanel>

                <!-- Learning Rate -->
                <StackPanel Grid.Column="3" Margin="0,0,16,0">
                    <TextBlock Text="Learning Rate" Style="{StaticResource ConfigLabel}"/>
                    <TextBox x:Name="LearningRateTextBox" Style="{StaticResource ConfigTextBox}" 
                             Text="0.05" Width="70" ToolTip="Learning rate for SGD (0.0001-1.0)"/>
                </StackPanel>

                <!-- Train Button -->
                <Button Grid.Column="4" x:Name="TrainButton" Content="Train" Width="80" Height="32"
                        FontSize="14" Click="TrainButton_Click" Margin="0,14,8,0"/>

                <!-- Reset Button -->
                <Button Grid.Column="5" x:Name="ResetButton" Content="Reset" Width="70" Height="32"
                        FontSize="13" Click="ResetButton_Click" Margin="0,14,0,0"/>
            </Grid>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: digit image -->
            <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="1"
                    Width="280" Height="280" Background="Black">
                <Image x:Name="DigitImage" RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Stretch="Uniform"/>
            </Border>

            <!-- Right: prediction + confidence bars -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock FontSize="18" FontWeight="Bold" Text="True Label: "/>
                    <TextBlock x:Name="TrueLabelText" FontSize="18" FontWeight="Bold" Text="-"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Predicted:  "/>
                    <TextBlock x:Name="PredictedText" FontSize="18" FontWeight="Bold" Text="-"/>
                </StackPanel>

                <TextBlock FontSize="13" Foreground="#888" Margin="0,0,0,6" Text="Confidence"/>

                <!-- Bar chart for digits 0-9 -->
                <ItemsControl x:Name="BarsPanel">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <TextBlock Text="{Binding Label}" Style="{StaticResource BarLabel}"/>
                                <Border Height="18" Width="{Binding BarWidth}" Background="{Binding BarColor}"
                                        CornerRadius="2" HorizontalAlignment="Left"/>
                                <TextBlock Text="{Binding PctText}" Style="{StaticResource BarPct}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Bottom: navigation -->
        <Grid Grid.Row="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button x:Name="PrevButton" Content="&lt; Prev" Width="70" Height="32"
                        FontSize="13" Click="PrevButton_Click" IsEnabled="False"/>
                <TextBlock x:Name="IndexText" FontSize="13" VerticalAlignment="Center"
                           Margin="12,0" Text="- / -"/>
                <Button x:Name="NextButton" Content="Next &gt;" Width="70" Height="32"
                        FontSize="13" Click="NextButton_Click" IsEnabled="False"/>
            </StackPanel>

            <TextBlock Grid.Column="2" x:Name="AccuracyText" FontSize="13"
                       VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#888"/>
        </Grid>
    </Grid>
</Window>
